<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view = "http://schemas.android.com/apk/res-auto"
    android:id="@+id/dish_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation = "horizontal"
    card_view:cardCornerRadius="2dp"
    android:clickable="true"
    android:layout_margin="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dish_photo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/example_dish_photo"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:id="@+id/Dish_text_content"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- not visible: used in code only -->
            <TextView
                android:id="@+id/dish_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>


            <TextView
                android:id="@+id/dish_name"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dish_ID"/>
            <TextView
                android:id="@+id/disc_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dish_name"/>

            <TextView
                android:id="@+id/dish_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/disc_description"
                android:layout_alignEnd="@id/disc_description"
                android:layout_alignRight="@id/disc_description"/>

            <TextView
                android:id="@+id/dish_availab_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/disc_description"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                />
        </RelativeLayout>

        <!--<android.support.design.widget.FloatingActionButton-->
            <!--android:id="@+id/update_dish"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:src="@drawable/ic_cached_white_24dp"-->
            <!--card_view:layout_anchor="@id/Dish_text_content"-->
            <!--android:onClick="showDatePickerDialog"/>-->
    </LinearLayout>

</android.support.v7.widget.CardView>